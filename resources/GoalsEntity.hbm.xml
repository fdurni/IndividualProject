<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.feliciadurni.tt.entity.GoalsEntity" table="goals" schema="trainingtracker">
        <id name="goalId">
            <column name="goalId" sql-type="int(11)"/>
        </id>
        <property name="goalWeight">
            <column name="goalWeight" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="personId">
            <column name="personId" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="exerciseId">
            <column name="exerciseId" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>