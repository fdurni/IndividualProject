<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.feliciadurni.tt.entity.ExercisesEntity" table="exercises">
        <meta attribute="class-description">
            This class contains the exercises detail.
        </meta>
        <id name="exerciseId" type="int" column="exerciseId">
            <generator class="native"/>
        </id>
        <property name="exerciseName" column="exerciseName" type="string"/>
        <property name="exerciseType" column="exerciseType" type="string"/>
        <property name="exerciseDescription" column="exerciseDescription" type="string"/>
    </class>
</hibernate-mapping>